#!/bin/env bash
while [ "$select" != "lock" -a "$select" != "exit" -a "$select" != "suspend" -a "$select" != "hibernate" -a "$select" != "sth (suspend-then-hibernate)" ]; do
    select=$(echo -e 'sth (suspend-then-hibernate)\nhibernate\nsuspend\nlock\nexit' | dmenu -i -p "What do you want to do?")
    [ -z "$select" ] && exit 0
done
[ "$select" = "exit" ] && pkill dwm
[ "$select" = "lock" ] && slock -m "Locked by $(whoami) on $(hostnamectl hostname) at $(date +'%Y-%m-%d %H:%M:%S')"
[ "$select" = "suspend" ] && systemctl suspend
[ "$select" = "hibernate" ] && systemctl hibernate
[ "$select" = "sth (suspend-then-hibernate)" ] && systemctl suspend-then-hibernate
exit 0

